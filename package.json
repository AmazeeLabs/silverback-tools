{
  "name": "@amazeelabs/silverback-tools",
  "description": "Silverback CLI tools for scripted project maintenance.",
  "version": "1.0.0",
  "author": "Philipp Melab @pmelab",
  "bin": {
    "svbt": "./bin/run"
  },
  "bugs": "https://github.com/AmazeeLabs/silverback-tools/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/errors": "^1.2.2",
    "@oclif/plugin-help": "^2",
    "tslib": "^1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^10",
    "@types/sinon": "^9.0.0",
    "chai": "^4",
    "eslint": "^5.13",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.1",
    "globby": "^10",
    "husky": "^4.2.5",
    "mocha": "^5",
    "nyc": "^14",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.7",
    "sinon": "^9.0.2",
    "ts-node": "^8",
    "typescript": "^3.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/AmazeeLabs/silverback-tools",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "svbt",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "AmazeeLabs/silverback-tools",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "readme": "oclif-dev readme && yarn format",
    "format": "prettier --write \"**/*.{ts,md}\"",
    "pretest": "tsc --noEmit",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "posttest": "eslint . --ext .ts --config .eslintrc && prettier --check \"**/*.{ts,md}\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts",
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "commitlint": {
    "extends": [
      "./@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
